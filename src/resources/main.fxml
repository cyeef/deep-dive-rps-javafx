<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import edu.cnm.deepdive.ca.rps.views.TerrainView?>

<GridPane xmlns:fx="http://javafx.com/fxml"
  fx:controller="edu.cnm.deepdive.ca.rps.controllers.Controller"
  alignment="center" hgap="10" vgap="10">
  <padding>
    <Insets top="10" left="20" bottom="10" right="20" />
  </padding>

  <columnConstraints>
    <ColumnConstraints
      percentWidth="33.33"/>
    <ColumnConstraints
      percentWidth="33.33"/>
    <ColumnConstraints
      percentWidth="33.33"/>
  </columnConstraints>

  <rowConstraints>
    <RowConstraints minHeight="600" maxHeight="600"/>
  </rowConstraints>

   <Label
     text="%speedSliderText"
     labelFor="$speedSlider"
     GridPane.rowIndex="1"
     GridPane.columnIndex="0"
    />

<TerrainView
  fx:id="terrainView"
  GridPane.rowIndex="0"
  GridPane.columnIndex="0"
  GridPane.columnSpan="3"
  width="600"
  height="600"/>

  <Slider
    fx:id="speedSlider"

    min="0.1"
    max="1"
    majorTickUnit="1"
    minorTickCount="0"
    snapToTicks="true"
    showTickMarks="true"
    showTickLabels="true"
    blockIncrement="0.1"
    value="0.5"

    blendMode="GREEN"
    GridPane.rowIndex="1"
    GridPane.columnIndex="0"
    GridPane.columnSpan="1"
    maxWidth="200"/>

  <ChoiceBox
    fx:id="neighborhoodChoice"
    onAction="#changeNeighborhood"
    GridPane.columnIndex="2"
    GridPane.rowIndex="1"/>

  <Button
    fx:id="runButton"
    GridPane.rowIndex="2"
    GridPane.columnIndex="0"
    text="%runButtonText"
    onAction="#runModel"
    prefWidth="50"
    alignment="BASELINE_CENTER"/>

  <Button
    fx:id="stopButton"
    GridPane.rowIndex="2"
    GridPane.columnIndex="1"
    text="%stopButtonText"
    disable="true"
    onAction="#stopModel"
    prefWidth="50"
  alignment="BASELINE_CENTER"/>

  <Button fx:id="resetButton"
    GridPane.rowIndex="2"
    GridPane.columnIndex="2"
    text="%resetButtonText"
    onAction="#resetModel"
    prefWidth="50"
    alignment="BASELINE_CENTER"/>


</GridPane>